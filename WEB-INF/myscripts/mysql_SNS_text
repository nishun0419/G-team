# データベースSNSの作成
set names utf8;
drop database if exists SNS;
create database SNS;

# ユーザーniseに、パスワードniseを設定し、データベースSNSに対するすべての権限を付与
grant all privileges on SNS.* to nise@localhost identified by 'nise';

